@model IEnumerable<HelloWorldReact.Models.showMajor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="container" class="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách lớp</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <p>
                        @Html.ActionLink("Thêm mới", "Create")
                    </p>

                    @* Trong form "Index" hàm trong controller. "Class" là controller trả về. form tìm kiếm sử dụng phương thức get nên dùng FormMethod.Get  *@
                    @using (Html.BeginForm("Index", "Major", FormMethod.Get))
                    {
                        <div class="form-group form-inline">
                            <input type="text" class="form-control" placeholder="Nhập mã " name="code">
                            <input type="text" class="form-control" placeholder="Nhập tên " name="name">
                            <button type="submit" class="btn btn-default">Seach</button>
                        </div>


                    }
                    <table class="table">
                        <tr>
                            <th>
                                Mã lớp
                            </th>
                            <th>
                                Tên lớp
                            </th>
                            <th>
                                Khóa
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.facilityname)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.code }, htmlAttributes: new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.code }, htmlAttributes: new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </table>

                    <div>
                        @Html.ActionLink("<<<", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
