@model IEnumerable<HelloWorldReact.Models._class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container" class="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách lớp</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.batchcode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.levelcode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.majorcode)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.batchcode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.levelcode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.majorcode)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.code }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.code }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.code })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
